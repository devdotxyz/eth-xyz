  <title>Custom Domain Configuration</title>

  <!-- FontAwesome CSS -->
  <link rel="stylesheet" href="/static-assets/css/lib/font-awesome/5.15.4/all.min.css"/>

  <link rel="stylesheet" href="/static-assets/css/style2.css?v=1.0">


  <!-- FontAwesome JS -->
